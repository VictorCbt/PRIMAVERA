<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1507416051062-8a3d4f400399?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2850&q=80)">
  <%= @vespa.name %>
</div>



  <div class="container">

      <!--  CONTENT -->

    <div class="row">
      <div class="col-md-8">
         <div class="card card-outline-secondary my-4">
          <div class="card-header">
            <h2><strong>Modele - <%= @vespa.model %> - <%= @vespa.cylinder%></strong></h2>
          </div>
          <div class="card-body">
            <p> Description de mon offre :
              <hr>
              <%= @vespa.description %>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Modi dolor, dolore, quae quisquam porro eaque odio cum aut. Suscipit velit fuga, modi expedita aut sed quae obcaecati eos voluptates sint!</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card card-outline-secondary my-4" id="booking">
          <div class="card-header">
            <h4 style="text-align: center"><strong>Votre rÃªve pour</strong></h4>
            <hr>
            <h5 style="text-align: center"><%= @vespa.price %> euros / jour</h5>
          </div>
          <div class="card-body">
            <%= render "bookings/new", vespa: @vespa, booking: @booking %>
          </div>
        </div>
      </div>
    </div>

  <!--  PHOTOS -->

     <div class="row">
      <div class="col-md-12">
         <div class="card card-outline-secondary my-4" id="photos">
          <div class="card-header">
            <h2><strong>Photos</strong></h2>
          </div>
          <div class="cards">
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @vespa.photo.key, height: 300, width: 400, crop: :fill %>')">
            </div>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1557073725-b890f79efd27?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=975&q=80)">
            </div>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1521118702313-63fca89fe1fd?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=581&q=80)">
            </div>
          </div>
        </div>
      </div>
     </div>

  <!--  BOOKING PART -->
    <div class="row">
      <div class="col-md-12">
         <div class="card card-outline-secondary my-4" id="review">
          <div class="card-header">
            <h2><strong>Mes commentaires</strong></h2>
          </div>
          <div class="card-body">
              <% @vespa.reviews.each do |review| %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <span class="badge badge-primary badge-pill">
                  <% counter = 0 %>
                  <% 5.times do %>
                    <i class="fa <%= review.rating > counter ? 'fa-star' : 'fa-star-o' %>"></i>
                    <% counter += 1 %>
                  <% end %>
                </span>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <%= review.coment %>
                  <small class="text-muted">Posted by <%= @vespa.user.first_name %> on 28/02/20</small>
                </li>
              </li>
            <% end %>
            <hr>
               <% if @booked_by_current_user %>
                  <!-- Button trigger modal -->
                <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#exampleModal">
                  Deposer un commentaire
                </button>

                <!-- Modal button commentaire-->
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Formulaire de commentaire</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">
                        <%= render "reviews/new", vespa: @vespa, review: @review %>
                      </div>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>

          </div>
        </div>
      </div>
     </div>
  </div>







